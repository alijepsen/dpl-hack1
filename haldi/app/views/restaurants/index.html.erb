<h1>Restaurants</h1>
<p>Cool restaurant for u</p>

<% if signed_in? && current_user.email == 'owner@gmail.com' %>
  <%= link_to 'Create Restaurant', new_restaurant_path, class: 'btn' %>
<% end %>

<aside class="col s12 m4">
  <% if @restaurants.any? %>
    <h5 class="center">Restaurant Guide</h5>
    <ul>
      <% @restaurants.each do |r| %>
        <li>
          <div class="col s12 m12">
            <div class="card appointments_card z-depth-0">
              <div class="card-content black-text">
                <span class="card-title"><%= r.name %></span>
                <p><strong>Description:</strong> <%= r.description %> </p>
                <p><strong>Street:</strong> <%= r.street %> </p>
                <p><strong>City:</strong> <%= r.city %> </p>
                <p><strong>State:</strong> <%= r.state %> </p>
                <p><strong>Postal:</strong> <%= r.postal %> </p>
                <p><strong>Delivery:</strong> <%= r.delivery %> </p>
              </div>
              <div class="card-action appointments_card">
                  <% if signed_in? && current_user.email == 'owner@gmail.com' %>
                    <%= link_to 'Delete Restaurant', restaurant_path(r), method: :delete, class: 'btn' %>
                  <% end %>
                <%= link_to 'To Restaurant Order', new_restaurant_order_path(r), class: 'btn' %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h5>No Restaurants found</h5>
  <% end %>
</aside>
